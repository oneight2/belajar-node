<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Ubah Kontak</h2>
      <% if (typeof errors !== 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      <form method="post" action="/contact/update">
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input
            type="hidden"
            name="oldNama"
            value="<%= contact.oldNama || contact.nama %> "
          />
          <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            required
            value="<%= contact.nama %> "
          />
        </div>
        <div class="mb-3">
          <label for="nomor" class="form-label">Nomor</label>
          <input
            type="text"
            class="form-control"
            id="nomor"
            name="nomor"
            required
            value="<%= contact.nomor %> "
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="text"
            class="form-control"
            id="email"
            name="email"
            value="<%= contact.email %> "
          />
        </div>

        <button type="submit" class="btn btn-primary">ubah Kontak</button>
      </form>
    </div>
  </div>
</div>
